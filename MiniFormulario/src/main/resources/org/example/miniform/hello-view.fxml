<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="284.0" prefWidth="383.0" spacing="20.0" style="-fx-background-color: #23202e;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.miniform.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label id="displayText" alignment="CENTER" prefHeight="22.0" prefWidth="170.0" text="Texto cambiante" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Consolas" size="18.0" />
      </font>
      <effect>
         <Bloom />
      </effect>
   </Label>

  <Label fx:id="formReceiver" alignment="CENTER" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Consolas Bold Italic" size="14.0" />
      </font></Label>
   <TextField fx:id="textBox" alignment="CENTER" promptText="Introduce un texto" style="-fx-background-color: #363147; -fx-text-fill: white;">
      <font>
         <Font name="Consolas Bold Italic" size="13.0" />
      </font>
   </TextField>
  <Button fx:id="sendButton" onAction="#sendForm" style="-fx-background-color: #363147;" text="Enviar" textFill="WHITE">
      <font>
         <Font name="Consolas Bold" size="12.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
</VBox>
